{
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "python.languageServer": "Pylance",
  "python.linting.pydocstyleEnabled": true,
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.local/bin/black",
  "python.formatting.blackArgs": ["--max-line-length", "80"],
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSaveMode": "file",
    "editor.formatOnSave": true
  },
  "editor.formatOnSave": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["i", "i"],
      "after": ["esc"]
    },
    {
      "before": ["j", "j"],
      "after": ["esc", "A"]
    }
  ],
  "workbench.colorCustomizations": {
    "[Default Light+]": {
    "list.inactiveSelectionBackground": "#CCE5FF",
    "list.activeSelectionBackground": "#063970",
    "editor.lineHighlightBackground": "#CCE5FFFF",
    "list.focusBackground": "#CCE5FFFF",
    "list.focusOutline": "#CCE5FF00",
    "editorSuggestWidget.focusHighlightForeground": "#FFF",
    },
    "[Default Dark+]": {
    "list.inactiveSelectionBackground": "#CCE5FF",
    "list.activeSelectionBackground": "#063970",
    "editor.lineHighlightBackground": "#CCE5FF5F",
    "list.focusBackground": "#CCE5FF5F",
    "list.focusOutline": "#CCE5FF00",
    "list.focusForeground": "#FFFFFF",
    "editorSuggestWidget.focusHighlightForeground": "#FFF",
    }
  }
}

